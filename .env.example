# Application
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# Database
DATABASE_URL="mysql://USER:PASSWORD@localhost:3306/sales_production_system"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_SECRET=your_access_token_secret_here
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_EXPIRE_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# SMTP / EMAIL (Optional - Leave empty to disable email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourcompany.com
SMTP_FROM_NAME=Sales & Production System

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=90000
RATE_LIMIT_MAX_REQUESTS=100
LOGIN_RATE_LIMIT_MAX=5

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14d

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache TTL (seconds)
CACHE_TTL_PRODUCTS=3600
CACHE_TTL_INVENTORY=300
CACHE_TTL_PERMISSIONS=3600
CACHE_TTL_DASHBOARD=300

# Company Info
COMPANY_NAME=Your Company Name
COMPANY_TAX_CODE=0000000000
COMPANY_ADDRESS=Your Address
COMPANY_PHONE=000-000-0000
COMPANY_EMAIL=contact@yourcompany.com
COMPANY_WEBSITE=yourcompany.com
